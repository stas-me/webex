
{% for article in articles %}
    <!-- Blog Post -->
    <div class="card mb-4">
        {#<img alt="Card image cap" class="card-img-top" src="http://placehold.it/750x300">#}
        {% if article.pictureFilename %}
            <img alt="Card image cap" class="card-img-top" src="{{ asset( fileDir ~ article.pictureFilename ) | imagine_filter('small_thumb')}}">
        {% endif %}
        <div class="card-body">
            <h2 class="card-title">{{ article.title }}</h2>
            <p class="card-text">{{ article.shortDescription|nl2br }}</p>
            <a class="btn btn-primary" href="{{ path('view_article', {'id' : article.id}) }}">Read More &rarr;</a>
        </div>
        <div class="card-footer text-muted">
            Posted on {{ article.dateForArticle }}
        </div>
    </div>
{% else %}
    <h5>
        No articles in this category!
    </h5>
{% endfor %}

