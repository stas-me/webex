{% extends 'Admin/base.html.twig' %}

{% block body %}

    <div class="col-12">
        <a href="{{ path('app_category_add') }}" class="btn btn-primary"> Add a category </a>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>

                {% for category in categories %}
                    <tr>
                        <th scope="row">{{ category.id }}</th>
                        <td>{{ category.name }}</td>
                        <td>
                            <a href="{{ path('app_category_edit', {'id' : category.id}) }}" class="btn btn-primary btn-action edit-url"> Edit </a>
                            <span class="btn btn-primary btn-action" onclick="ConfirmDelete('{{ path('app_category_delete', {'id' : category.id}) }}', 'Are you sure you want to delete this category?')"> Delete </span>
                        </td>
                    </tr>
                {% else %}
                    <td colspan="8" class="text-center">
                        No categories found!
                    </td>
                {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}
